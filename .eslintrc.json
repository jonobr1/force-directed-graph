{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "commonjs": true,
    "amd": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 13
  },
  "rules": {
    "semi": [
      "error",
      "always"
    ],
    "no-unused-vars": [
      "error",
      {
        "args": "none"
      }
    ]
  },
  "overrides": [
    {
      "files": [
        "utils/**"
      ],
      "env": {
        "node": true,
        "es6": true
      },
      "parserOptions": {
        "ecmaVersion": 8
      }
    }
  ],
  "ignorePatterns": [
    "build/"
  ]
}
